# Make it so the cask installs go to the root application dir
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# golang
export GOPATH=$HOME/golang
export PATH=$PATH:$GOPATH/bin

# Include any secret exports
if [ -f ~/.secrets ]; then
  source ~/.secrets
fi

export EDITOR=nvim

# Silence direnv
export DIRENV_LOG_FORMAT=

# theScore non-secret exports
export DEVOPS_HOME=/Users/jalbert/Projects/theScore/ansible-playbooks
